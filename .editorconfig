root = true

###########################################################
; common
###########################################################

[*]
charset = utf-8

end_of_line = LF
insert_final_newline = true
trim_trailing_whitespace = true

indent_style = space
indent_size = 4

[Makefile]
indent_style = tab

[Makefile.common]
indent_style = tab

[*.{yml,yaml}]
indent_size = 2

[*.go]
indent_style = tab

[*.golden]
trim_trailing_whitespace = false
insert_final_newline = false

[VERSION]
insert_final_newline = false
